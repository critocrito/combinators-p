{
  "name": "combinators-p",
  "version": "0.3.0",
  "description": "A collection of combinators for promisified JavaScript code.",
  "main": "_dist/combinators-p.js",
  "browser": "_dist/combinators-p.js",
  "module": "lib/index.js",
  "config": {
    "srcDir": "lib",
    "testDir": "test",
    "distDir": "_dist",
    "reporter": "progress"
  },
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "prettier-check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "prepublishOnly": "npm run build",
    "publish": "git push --follow-tags origin master",
    "watch": "npm run test -- -w",
    "test": "mocha -c --reporter $npm_package_config_reporter --compilers js:babel-register --require babel-polyfill --require test/helpers.js $npm_package_config_testDir/**/*.spec.js",
    "lint": "eslint --cache $npm_package_config_testDir $npm_package_config_srcDir",
    "fix": "npm run lint -- --fix",
    "compile": "npm run clean -s && rollup -c",
    "docs": "documentation lint $npm_package_config_srcDir/**/*.js && documentation readme --shallow --readme-file Readme.md -s \"API\" lib/*.js && doctoc --maxlevel 3 --notitle Readme.md",
    "clean": "rimraf $npm_package_config_distDir",
    "build": "npm run lint -s && npm run test -s && npm run docs -s && npm run compile -s",
    "release": "npm run build -s && standard-version -i Changelog.md -m \"chore(release): Bumped to version %s.\" --sign",
    "release-candidate": "npm run release -- --prerelease \"rc\""
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/critocrito/combinators-p.git"
  },
  "keywords": [],
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/critocrito/combinators-p/issues"
  },
  "homepage": "https://gitlab.com/critocrito/combinators-p#Readme.md",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-async-functions": "^6.22.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "bluebird": "^3.5.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "doctoc": "^1.3.0",
    "documentation": "^5.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "husky": "^0.14.3",
    "in-range": "^1.0.0",
    "jsverify": "^0.8.2",
    "lodash": "^4.17.4",
    "mocha": "^3.4.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.48.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^3.2.1",
    "standard-version": "^4.2.0",
    "time-span": "^2.0.0",
    "validate-commit-msg": "^2.13.1"
  }
}
