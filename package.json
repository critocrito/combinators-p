{
  "name": "nodejs-lib-scaffold",
  "version": "0.0.0",
  "description": "A scaffolding repository to quick start a new NodeJS library.",
  "main": "_dist/index.js",
  "config": {
    "srcDir": "lib",
    "testDir": "test",
    "distDir": "_dist",
    "reporter": "spec"
  },
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "prettier-check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "prepublishOnly": "npm run build",
    "publish": "git push --follow-tags origin master",
    "red-green": "npm run lint -s && npm run test -s && npm run compile -s",
    "watch": "chokidar \"package.json\" \"$npm_package_config_testDir/**/*.js\" \"$npm_package_config_srcDir/**/*.js\" -c \"npm run red-green -s\"",
    "test": "mocha -c --reporter $npm_package_config_reporter --compilers js:babel-register --require test/helpers.js $npm_package_config_testDir/**/*.spec.js",
    "lint": "eslint --fix --cache $npm_package_config_testDir $npm_package_config_srcDir",
    "compile": "babel -d $npm_package_config_distDir $npm_package_config_srcDir",
    "docs": "documentation lint $npm_package_config_srcDir/**/*.js && documentation readme --shallow --readme-file Readme.md -s \"API\" lib/**/*.js && doctoc --maxlevel 3 --notitle Readme.md",
    "clean": "rimraf $npm_package_config_distDir",
    "prebuild": "npm run clean",
    "build": "npm run red-green -s && npm run docs -s",
    "release": "standard-version -i Changelog.md -m \"chore(release): Bumped to version %s.\" --sign",
    "release-candidate": "npm run release -- --prerelease \"rc\""
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/critocrito/nodejs-lib-scaffold.git"
  },
  "keywords": [],
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/critocrito/nodejs-lib-scaffold/issues"
  },
  "homepage": "https://gitlab.com/critocrito/nodejs-lib-scaffold#Readme.md",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "chokidar-cli": "^1.2.0",
    "doctoc": "^1.3.0",
    "documentation": "^5.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "husky": "^0.14.3",
    "jsverify": "^0.8.2",
    "mocha": "^3.4.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "standard-version": "^4.2.0",
    "validate-commit-msg": "^2.13.1",
    "bluebird": "^3.5.0",
    "lodash": "^4.17.4"
  }
}
